<Configuration>
    <Properties>
        <Property name="pattern">%d{yyyy-MM-dd'T'HH:mm:ss.nnnnnn}%d{XXX} [%-5p][%t][%c{0}] %m%n</Property>
        <Property name="logPath">log/AOC</Property>
        <Property name="rollingSuffix">%d{yyyyMMdd-HH}.%i.gz</Property>
        <Property name="maxFileSize">10MB</Property>
        <Property name="maxRandomDelay">30</Property>
    </Properties>


    <Appenders>
        <!-- Console Appenders -->
        <Console name="STD_OUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
            <Filters>
                <LevelRangeFilter minLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>
        <Console name="STD_ERR" target="SYSTEM_ERR">
            <PatternLayout pattern="${pattern}"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>

        <!-- Rolling File Appenders -->
        <RollingFile name="MAIN_FILE" append="true" createOnDemand="true" fileName="${logPath}-all.log"
                     filePattern="${logPath}-all-${rollingSuffix}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="${maxFileSize}"/>
                <TimeBasedTriggeringPolicy maxRandomDelay="${maxRandomDelay}"/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="nomax"/>
        </RollingFile>
        <RollingFile name="WARN_ERROR_FILE" append="true" createOnDemand="true" fileName="${logPath}-warn-error.log"
                     filePattern="${logPath}-warn-error-${rollingSuffix}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="${maxFileSize}"/>
                <TimeBasedTriggeringPolicy maxRandomDelay="${maxRandomDelay}"/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="nomax"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="STD_OUT"/>
            <AppenderRef ref="STD_ERR"/>
        </Root>
    </Loggers>
</Configuration>
